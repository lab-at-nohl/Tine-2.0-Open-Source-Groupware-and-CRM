attributeTypes: ( 1.3.6.1.4.1.45765.1.2.3 
 NAME 'mailDiscard' 
 DESC 'Do not deliver original mail (not necessary if forwarded before)' 
 EQUALITY booleanMatch 
 SYNTAX 1.3.6.1.4.1.1466.115.121.1.7 
 SINGLE-VALUE 
 )
